<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Yuyuyui.PrivateServer.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Yuyuyui.PrivateServer.GUI.Views.UpdateLocalData"
        Width="400" Height="200"
        CanResize="False"
        SystemDecorations="BorderOnly"
        ShowInTaskbar="False"
        Title="Yuyuyui.PrivateServer.GUI"
        ExtendClientAreaToDecorationsHint="True">

  <Design.DataContext>
    <vm:UpdateLocalDataViewModel />
  </Design.DataContext>

  <Panel Margin="20 20">
    <StackPanel>
      <TextBlock Text="{Binding DownloadingFileName}"></TextBlock>
      <ProgressBar ShowProgressText="True" Value="{Binding DownloadingFileProgress}"></ProgressBar>
      <TextBlock Text="{Binding CurrentDownloadedFiles}"></TextBlock>
      <ProgressBar ShowProgressText="True" Value="{Binding CurrentDownloadedProgress}"></ProgressBar>
    </StackPanel>
  </Panel>

</Window>