<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Yuyuyui.PrivateServer.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Yuyuyui.PrivateServer.GUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Yuyuyui.PrivateServer.GUI"
        TransparencyLevelHint="{Binding WindowTransparency}"
        Background="{Binding WindowBrush}"
        ExtendClientAreaToDecorationsHint="False">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Panel>
    <StackPanel>
      <TextBlock Text="{Binding DownloadingFileName}"></TextBlock>
      <ProgressBar Value="{Binding DownloadingFileProgress}" ShowProgressText="True"></ProgressBar>
      <TextBlock Text="{Binding CurrentDownloadedFiles}"></TextBlock>
      <ProgressBar Value="{Binding CurrentDownloadedProgress}" ShowProgressText="True"></ProgressBar>
      <Button Content="Get Local Data" Command="{Binding UpdateLocalData}"></Button>
    </StackPanel>
  </Panel>



</Window>
