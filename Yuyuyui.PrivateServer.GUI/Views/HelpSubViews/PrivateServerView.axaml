<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:Yuyuyui.PrivateServer.GUI.Controls"
             xmlns:vm="clr-namespace:Yuyuyui.PrivateServer.GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             x:Class="Yuyuyui.PrivateServer.GUI.Views.PrivateServerView">

    <Design.DataContext>
        <vm:PrivateServerViewModel />
    </Design.DataContext>

    <ScrollViewer VerticalAlignment="Stretch">
        <StackPanel Orientation="Vertical">

            <md:MarkdownScrollViewer Source="avares://YuyuyuiPrivateServerGUI/Assets/Texts/Helps/private-server/p1.md" />
            <c:HelpTopicButton ButtonText="{Binding IntroductionButtonText}" Command="{Binding IntroductionButtonCommand}" />

        </StackPanel>
    </ScrollViewer>

</UserControl>